<div class="container">

  <h2><%= @course.name %></h2>

  <h3>Chapters</h3>
  <ul class="collapsible" data-collapsible="expandable">

    <li>
      <div class="collapsible-header active">Current Chapters</div>
      <div class="collapsible-body">
        <div class="row">
          <% @chapters.each do |chapter| %>
              <% if @edit_chapter==chapter %>
                  <%= render 'courses/modifyChapterCard', chapter: chapter %>

              <% elsif passed?(chapter)==0 %>
                  <%= render 'courses/failChapterCard', chapter: chapter %>
              <% elsif passed?(chapter)==-1 %>
                  <%= render 'courses/chapterCard.html.erb', chapter: chapter %>
              <% end %>
          <% end %>
        </div>
      </div>

    </li>


    <li>
      <div class="collapsible-header">Finished Chapters</div>

      <!-- start collapsible body-->
      <div class="collapsible-body">
        <div class="row">
          <% @chapters.each do |chapter| %>
              <% if @edit_chapter==chapter %>
                  <%= render 'courses/chapterCard.html.erb', chapter: chapter %>
              <% elsif passed?(chapter)==1 %>
                  <%= render 'courses/chapterCard.html.erb', chapter: chapter %>
              <% end %>
          <% end %>
        </div>
      </div>
    </li>

  </ul>
</div>

