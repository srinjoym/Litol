<div class="col s12 m4">
  <div class="card medium">

    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src=<%= asset_path course.imageSource %>>
    </div>
    <div class="card-content">
      <span class="card-title orange-text text-darken-2 activator"><%= course.name %></span>
      <% if course.default %>
          <br><h6 style = "color:grey; font-style: italic">Default Course</h6>
          <%end%>
    </div>
    <div class="card-reveal">
      <span class="orange-text text-darken-2 activator"><%= course.name %>
        <i class="mdi-navigation-close right"></i></span>

      <p><%= course.description %></p>
      <%= link_to "Continue", course %>

    </div>
  </div>
</div>
