<div class="col s12 m4">
  <div class="card medium">

    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src=<%= asset_path course.imageSource %>>
    </div>
    <div class="card-content">
      <span class="card-title activator orange-text text-darken-2"><%= course.name %></span>

<% if course.default%>

        <a  class="btn-medium btn-floating disabled right no-margin"><i class="mdi-editor-border-color"></i></a>
          <br><h6 style = "color:grey; font-style: italic">Default Course</h6>
          <%else%>
          <a href="<%= edit_course_path(course.id)%>" class="btn-medium btn-floating waves-effect waves-light no-margin orange right"><i class="mdi-editor-border-color"></i></a>
<%end%>
    </div>
    <div class="card-reveal">
      <span class="card-title orange-text text-darken-2 activator"><%= course.name %>
        <i class="mdi-navigation-close right"></i></span>

      <p><%= course.description %></p>
      <%= link_to "Continue", course %>

    </div>
  </div>
</div>
