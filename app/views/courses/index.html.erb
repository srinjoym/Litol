<div class="container">
  <% if !@active_courses.first.nil? %>
      <h2>Current Courses</h2>
  <% end %>
  <div class="row">
    <% @active_courses.each do |course| %>
        <div class="col s12 m4">
          <div class="card medium">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src=<%= course.imageSource %>>
            </div>
            <div class="card-content">
              <span class="card-title" style="color:black"><%= course.name %></span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= course.name %></span>

              <p><%= course.description %></p>
              <%= link_to "Continue", course %>

            </div>
          </div>
        </div>

    <% end %>
  </div>
  <% if !@available_courses.first.nil? %>
      <h2>Availaible Courses</h2>
  <% end %>

  <div class="row">


    <% @available_courses.each do |course| %>
        <div class="col s12 m4">
          <div class="card medium">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src=<%= course.imageSource %>>
            </div>
            <div class="card-content">
              <span class="card-title" style="color:black"><%= course.name %></span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= course.name %></span>

              <p><%= course.description %></p>
              <% if current_user.active_courses.find_by(course_id: course.id) %>
                  <%= link_to "Continue", course %>
              <% else %>
                  <%= link_to "Start", course %>
              <% end %>
            </div>
          </div>
        </div>

    <% end %>

  </div>


</div>











