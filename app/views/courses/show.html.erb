<div class="container">

  <h2><%= @course.name %></h2>

  <h3>Chapters</h3>

  <div class="row">
    <% @chapters.each do |chapter| %>
    <div class="col s12 m6">
      <div class="card grey lighten-3 small">
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%=chapter.name%> <i class="mdi-navigation-more-vert right"></i></span>
          <p><%=chapter.overview%></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Card Title <i class="mdi-navigation-close right"></i></span>
          <ol>
          <% chapter.sections.each do |section| %>
                <li> <%= link_to section.name, section %></li>
          <%end%>
          </ol>
        </div>
      </div>
    </div>
        <%end%>
  </div>
</div>
